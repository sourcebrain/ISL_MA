<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#512DA8"
    android:layout_marginTop="48dp"
    android:orientation="vertical"
    tools:context="main.isl.sb.com.indiansoccerleague2015.NavigationDrawerFragment">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#673AB7"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/download" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumbnail"
                android:maxLines="3"
                android:padding="8dp"
                android:text="Indian Soccer Leauge 2015"
                android:textColor="#222"
                android:textSize="15dp"
                android:textStyle="bold" />

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:maxLines="3"
                android:padding="8dp"
                android:text="FIXTURE"
                android:textColor="#666"
                android:textSize="10dp" />-->

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#673AB7"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#311B92">
            <View

                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#EDE7F6"
                />


            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:maxLines="3"
                android:padding="8dp"
                android:text="FIXTURE"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold" />
            <View

                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#EDE7F6"
                />
            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:maxLines="3"
                android:padding="8dp"
                android:text="RESULT"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold" />
            <View

                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#EDE7F6"
                />
            <TextView
                android:id="@+id/title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:maxLines="3"
                android:padding="8dp"
                android:text="POINT TABLE"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold" />
            <View

                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#EDE7F6"
                />



        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_marginTop="75dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                   android:text="Powered By SourceBrain"
                   android:textColor="#FFF"
                   android:textSize="8dp" />

</LinearLayout>
